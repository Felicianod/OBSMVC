@model OBSMVC.Controllers.CollectionForm

@{
    ViewBag.Title = "showColFormTemplate";
}

<style>
  body { padding-top: 70px; }
  .affix {
      top: 0;
      width: 100%;
  }
  .affix + .container-fluid {
      padding-top: 70px;
  }
  
</style>

<div class="panel panel-default">
    <div class="panel-heading" data-spy="affix" data-offset-top="197">
        <table style="width:100%">
            <tr>
                <td>
                    <h3 class="panel-title"> <b>COLLECTION FORM: </b> @Model.cft_Title </h3>
                    <h5> Subtitle: @Model.cft_SubTitle </h5>
                </td>
                <td style="text-align:right; vertical-align:top">
                    <span class="badge" data-toggle="tooltip" title="Form ID: @Model.cft_id Number/Version: @Model.cft_Nbr v.@Model.cft_Version">
                       ID: @Model.cft_id<text>-N</text>@Model.cft_Nbr v.@Model.cft_Version
                    </span>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <table style="width:100%">
                        <tr>
                            <td style="width:10%"><b>CUSTOMER: </b></td>
                            <td style="width:15%">@Model.cft_Cust</td>
                            <td style="width:4%"><b>LC: </b></td>
                            <td style="width:15%">@Model.cft_LC</td>
                            <td style="width:8%"><b>TYPE: </b></td>
                            <td style="width:40%">@Model.cft_obsType</td>
                            <td style="width:8%; text-align:right"><span class="badge">@Model.cft_Status </span> </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </div>
    <div class="panel-body">
    @* - - - - - Loop Once for each Question Section - - - - - *@
    @for (int x = 0; x < 5; x++)
    {
       <div class="panel-group">
         <div class="panel panel-default">
            <div class="panel-heading">
               <h4 class="panel-title">
                  <a data-toggle="collapse" href="#collapse1">Section No. @x+1</a>
               </h4>
            </div>
            <div id="collapse1" class="panel-collapse collapse">
               <ul class="list-group">
                  <li class="list-group-item">Question @x+1a</li>
                  <li class="list-group-item">Question @x+1b</li>
                  <li class="list-group-item">Question @x+1a</li>
               </ul>
               @*<div class="panel-footer">Footer</div>*@
            </div>
         </div>
       </div>
    }
   </div>
</div>

<p>
    @*@Html.ActionLink("Edit", "Edit", new { id = Model.obs_cft_id }) |*@
    @Html.ActionLink("Back to List", "Index")
</p>

