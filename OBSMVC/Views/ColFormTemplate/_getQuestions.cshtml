@model  IEnumerable<OBSMVC.Controllers.AvailableQuestions>

@{var listEntries = (Model as List<OBSMVC.Controllers.AvailableQuestions>).Count; }

@if (listEntries > 0)
{
    
    <table class="table table-responsive table-condensed table-hover">
        <thead>
            <tr style="background-color:lightgray">
                <th>ID</th>
                <th>Question Text</th>
            </tr>
        </thead>
        @{
            int rowCounter = 0;
            string rowId = "";
        }
        @foreach (var question in Model)
        {
            rowCounter++;
            //rowId = "row" + rowCounter.ToString("00");
            rowId = @question.obs_question_id.ToString("00");
            <tr id="@rowId" draggable="true" ondragstart="drag(event)">
                <td>@question.obs_question_id</td>
                <td>@question.obs_question_full_text</td>
            </tr>
        }
    </table>
}
else
{
    <div class="alert alert-danger" style="color:red">
        <strong>Warning!</strong> &nbsp;&nbsp; THERE ARE NO RECORDS TO DISPLAY
    </div>
}
