@model OBSMVC.Models.EMPLOYEE
@{
    ViewBag.Title = "Edit Employee Profile";
}
<br />
<div class="container">
    <h1>Edit Profile</h1>
    <hr>
    <div class="row">
        @* <div class="alert alert-info alert-dismissable">
                <a class="panel-close close" data-dismiss="alert">×</a>
                <i class="fa fa-coffee"></i>
            </div>*@
    </div>
    <div class="row">
        <!-- left column -->
        <div class="col-md-3">
            <div class="text-left">
                @*  <img src="~/Images/iconNoAvatar.png" class="avatar img-circle" alt="avatar">*@
                @if (Model.dsc_emp_last_name.Trim()== "Pogany")
                { <img src="~/Images/KPogany.jpg" class="avatar img-circle" alt="avatar">}
                    else {
                    <img src="~/Images/iconNoAvatar.png" class="avatar img-circle" alt="avatar">
                    }
            </div>
            <h3>@Model.dsc_emp_first_name @Model.dsc_emp_last_name</h3>
            <h5>@Model.dsc_emp_email_addr</h5>
            <h5>ADP ID: @Model.dsc_emp_adp_id</h5>
        </div>

        <!-- edit form column -->
        <div class="col-md-9 personal-info">
            <form class="form-horizontal" role="form" method="post">
                <div class="form-group row">
                    <label class="col-lg-3 control-label">JDE ID:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" value="@Model.dsc_emp_perm_id">
                    </div>
                </div>
                <div class="form-group  row">
                    <label class="col-lg-3 control-label">Title:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" value="@Model.dsc_emp_title">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 control-label">Facility:</label>
                    <div class="col-lg-8">
                        <div class="ui-select">

                            @Html.DropDownList("dsc_assigned_lc_id", null, htmlAttributes: new { @class = "form-control" })

                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 control-label">Hire Date:</label>
                    <div class="input-group date col-lg-8" id="datetimepicker1">
                        <input class="form-control" type="text" value="@Model.dsc_emp_hire_dt">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 control-label">Term Date:</label>
                    <div class="input-group date col-lg-8" id="datetimepicker2">
                        <input class="form-control" type="text" value="@Model.dsc_emp_term_dt">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </div>
                </div>


                <div class="form-group row">
                    <label class="col-lg-3 control-label">Employee Flags:</label>
                    <div class="form-group col-lg-8">
                        <label class="col-sm-3 text-center" for="dsc_emp_can_be_obs_yn">
                            Observable:
                            <input type="checkbox" class="form-control input-sm"  id="dsc_emp_can_be_obs_yn" @if (Model.dsc_emp_can_be_obs_yn == "Y") { <text> checked="checked" </text>   }>
                        </label>
                        <label class="col-sm-3 text-center" for="dsc_emp_hourly_yn">
                            Hourly:
                            <input type="checkbox" class="form-control input-sm" id="dsc_emp_hourly_yn"  @if (Model.dsc_emp_hourly_yn == "Y") { <text> checked="checked" </text>    }>
                        </label>
                        <label class="col-sm-3 text-center" for="dsc_emp_temp_yn">
                            Temp:
                            <input type="checkbox" class="form-control input-sm" id="dsc_emp_temp_yn" @if (Model.dsc_emp_temp_yn == "Y") { <text> checked="checked" </text>    } >                      
                        </label>
                    </div>
                </div>








                <div class="form-group row">
                    <label class="col-lg-3 control-label ">Observable:</label>
                    <div class="col-md-8 checkbox">
                        <input class="form-control" type="checkbox" @if (Model.dsc_emp_can_be_obs_yn == "Y") { <text> checked="checked" </text>   }>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Hourly:</label>
                    <div class="col-md-8 checkbox">
                        <input class="form-control" type="checkbox" @if (Model.dsc_emp_hourly_yn == "Y") { <text> checked="checked" </text>    }>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Temp:</label>
                    <div class="col-md-8 checkbox">
                        <input class="form-control" type="checkbox" @if (Model.dsc_emp_temp_yn == "Y") { <text> checked="checked" </text>    }>
                    </div>
                </div>

                <br />
                <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-md-8">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                        @*<input type="submit" class="btn btn-primary" value="Save Changes">*@
                        <span></span>
                        <input type="reset" class="btn btn-default" value="Cancel">
                    </div>
                </div>
                <input type="hidden" value="@Model.dsc_emp_id" name="dsc_emp_id" id="dsc_emp_id">
            </form>
        </div>
    </div>
</div>
<hr>
<div>
    @Html.ActionLink("Back to Employee List", "Index")
</div>
