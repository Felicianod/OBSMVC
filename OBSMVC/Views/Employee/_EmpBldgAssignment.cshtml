@model OBSMVC.Models.empLCAsgnViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-5">
            <div class="row"><span>Unassigned:</span></div>
            <select name="unasgndLCList" id="unasgndLCList" multiple="multiple" size="10" style="min-width:300px">
                @foreach (var lc in Model.unassignedLCList)
                {
                    <option value="@lc.dsc_lc_id">@lc.dsc_lc_name</option>
                }
            </select>   
        </div>
        <div class="col-md-2" style="margin-top:50px; margin-bottom:50px">
            <div class="row">
                <button type="button" class="btn" id="btnAsgnLC">></button>
            </div>
            <br />
            <div class="row">
                <button type="button" class="btn" id="btnUnasgnLC"><</button>
            </div>
        </div>
        <div class="col-md-5">
            <div class="row"><span>Assigned:</span></div>
            <select name="asgndLCList" id="asgndLCList" multiple="multiple" size="10" style="min-width:300px">
                @foreach (var lc in Model.userLCList)
                {
                    <option value="@lc.dsc_lc_id">@lc.dsc_lc_name</option>
                }
            </select>
        </div>
    </div>

}
