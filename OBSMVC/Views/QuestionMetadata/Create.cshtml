@model OBSMVC.Models.OBS_QUESTION_METADATA

@{ ViewBag.Title = "Metadata Create"; }

<div class="container">
    <div class="well well-sm"><h3>Question Metadata Maintenance</h3></div>
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.obs_quest_md_value, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.obs_quest_md_value, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.obs_quest_md_value, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.obs_quest_md_cat, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.obs_quest_md_cat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.obs_quest_md_cat, "", new { @class = "text-danger" })
            </div>
        </div>
        <input type="hidden" name="qId" id="qId" value="@ViewBag.qId" />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Questions", "Edit", "Question", new { id = @ViewBag.qId }, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
