<!DOCTYPE html>
<html lang="en">
<head>    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DSC Observations</title>
    
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>

    @*<link href="~/Content/jquery-ui.css" rel="stylesheet" type="text/css" />*@
    <style>
        #foot {
            position: fixed !important;
            width: 100%;
            bottom: 0;
            text-align: center;
            padding: 5px 0;
            background: #f0f0f0;
            border-top: 1px solid #666;
        }

        .btnAdd {
            background: #3d85c6;
            background: -webkit-linear-gradient(#073763, #3d85c6 50%, #073763);
            background: linear-gradient(#073763, #3d85c6 50%, #073763);
            border: 1px solid #569;
            border-radius: 9px;
            box-shadow: -2px 2px 0 0 #444;
            color: #fff;
            display: inline-block;
            padding: 3px 13px;
            font: normal 700 14px/1 "Calibri", sans-serif;
            text-align: center;
            text-shadow: 2px 2px 0 #070550;
        }

        .btnAdd:hover {
            background: #3498db;
            background: -webkit-linear-gradient(#3d85c6, #3498db 50%, #3d85c6);
            background: linear-gradient(#3d85c6, #3498db 50%, #3d85c6);
        }
        .container-fluid {
        max-width: 1400px;
		padding:25px;  /*Whitespace or outside gutter*/
        }
    </style>
</head>
<body>
    <div style="text-align:center">
        @Html.Partial("_NavMenu")
    </div>
    <div class="container-fluid body-content ">
        @RenderBody()
        <hr />
    </div>
    <div id="foot">
        <table style="width:100%">
            <tr>
                <td style="text-align:center"></td>
                <td style="text-align:center">
                    Questions? &nbsp;&nbsp;&nbsp;&nbsp; <a href="mailto:dsclogistics@service-now.com">dsclogistics@service-now.com</a>
                </td>
                <td style="text-align:right">
                    <b>v.Sprint3 &nbsp;&nbsp;&nbsp;&nbsp;</b>
                </td>
            </tr>
        </table>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    
    @RenderSection("scripts", required: false)
</body>
</html>

